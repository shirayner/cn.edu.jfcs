<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="cn.edu.jfcs.app.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="RCP Perspective"
            class="cn.edu.jfcs.app.Perspective"
            id="cn.edu.jfcs.perspective">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="cn.edu.jfcs.application"
            name="jfcs">
         <property
               name="windowImages"
               value="icons/jfcs.gif,icons/eclipse32.png,icons/eclipse48.png,icons/eclipse64.png, icons/eclipse128.png,icons/eclipse256.png">
         </property>
         <property
               name="appName"
               value="jfcs">
         </property>
         <property
               name="startupForegroundColor"
               value="00FF80">
         </property>
         <property
               name="startupMessageRect"
               value="6,260,200,16">
         </property>
         <property
               name="startupProgressRect"
               value="1,279,443,15">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="cn.edu.jfcs.intro">
      </intro>
      <introProductBinding
            introId="cn.edu.jfcs.intro"
            productId="cn.edu.jfcs.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="cn.edu.jfcs.intro"
            content="introContent.xml"
            id="cn.edu.jfcs.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="cn.edu.jfcs.ui.TeachUnitName"
            icon="icons/teachUnitNameView.gif"
            id="cn.edu.jfcs.ui.teachunitname"
            name="教学单位"
            restorable="true">
      </view>
      <view
            allowMultiple="false"
            class="cn.edu.jfcs.ui.PieDiagram"
            icon="icons/pieDiagramView.gif"
            id="cn.edu.jfcs.ui.piediagram"
            name="经费概览"
            restorable="true">
      </view>
      <view
            class="cn.edu.jfcs.ui.TeachUnitClass"
            icon="icons/teachUnitClassView.gif"
            id="cn.edu.jfcs.ui.teachunitclass"
            name="教学单位课程明细"
            restorable="true">
      </view>
   </extension>

</plugin>
